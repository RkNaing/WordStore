<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/splash_iv_app_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_logo_256"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/splash_tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextTitle"
            android:text="@string/app_name"
            app:layout_constraintStart_toStartOf="@+id/splash_iv_app_logo"
            app:layout_constraintEnd_toEndOf="@+id/splash_iv_app_logo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/splash_iv_app_logo" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/splash_tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTextCaption"
            android:text="@string/lbl_app_version"
            app:layout_constraintStart_toStartOf="@+id/splash_tv_app_name"
            app:layout_constraintEnd_toEndOf="@+id/splash_tv_app_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/splash_tv_app_name" />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/splash_tv_app_vendor_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/AppTextCaption"
            android:text="@string/splash_lbl_devs_hub_copyright"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>